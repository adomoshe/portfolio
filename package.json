{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Ado's React Portfolio",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "npm run client",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adomoshe/portfolio.git"
  },
  "keywords": [
    "react",
    "portfolio"
  ],
  "author": "Adoran Moshe",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/adomoshe/portfolio/issues"
  },
  "homepage": "https://github.com/adomoshe/portfolio#readme",
  "dependencies": {
    "express": "^4.16.4",
    "if-env": "^1.0.4"
  }
}
